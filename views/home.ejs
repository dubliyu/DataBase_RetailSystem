<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Home</title>
        <link rel="stylesheet" type="text/css" href="css/home.css" />
    </head>
    <body>
        <% if(user_type !== "customer") { %>
            <div class="header" style="background-color: #7465A0">
        <% } else { %>
            <div class="header">
        <% } %>
            <nav>
                <div class="logo-container">
                    <img src="asset/logo.png" class="logo-img">
                </div>
                <div class="links-container">
                    <a href="/home" class="nav-link">Home</a>
                    <div class='link-border'>&nbsp;</div>
                    <a href="/about" class="nav-link">About</a>
                    <div class='link-border'>&nbsp;</div>
                    <a href="/stores" class="nav-link">Stores</a>
                    <div class='link-border'>&nbsp;</div>
                    <a href="/profile" class="nav-link">Profile</a>
                    <div class='link-border'>&nbsp;</div>
                    <a href="#" id="logout_btn" class="nav-link">Log out</a>
                </div>
            </nav>
        </div>

        <div class="content">
            <div class="home_box">
                <a href="/Transactions" class="nav-link-box">Transaction History</a>
            </div>
            <div class="home_box">
                <a href="/stock" class="nav-link-box">Item Catalog</a>
            </div>
            <% if(user_type !== "employee") { %>
                <div class="home_box">
                    <a href="/comments" class="nav-link-box">Comment</a>
                </div>
            <% } %>
        </div>

        <div class="footer">
            <nav>
                <div class="logo-container">
                    <img src="asset/logo.png" class="logo-img">
                </div>
            </nav>
        </div>
        <script type="text/javascript" src="js/general.js"></script>
    </body>
</html>